<configuration>
    <branches>
        <branch>
            <pattern>master</pattern>
            <versionFormat>1.0.0-SNAPSHOT</versionFormat>
        </branch>
    </branches>
    <tags>
        <tag>
            <pattern>version/.*</pattern>
            <prefix>version/</prefix>
            <versionFormat>${tag}</versionFormat>
        </tag>
    </tags>
    <commit>
        <versionFormat>${commit}</versionFormat>
    </commit>
</configuration>